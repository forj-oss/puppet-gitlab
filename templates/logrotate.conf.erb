# GitLab logrotate settings
# based on: http://stackoverflow.com/a/4883967

<%= scope.lookupvar("::gitlab::gitlab_user_home") %>/gitlab/log/*.log {
    daily
    missingok
    rotate 90
    compress
    notifempty
    copytruncate
}

<%= scope.lookupvar("::gitlab::gitlab_user_home") %>/gitlab-shell/gitlab-shell.log {
    daily
    missingok
    rotate 90
    compress
    notifempty
    copytruncate
}
